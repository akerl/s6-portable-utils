name 's6-portable-utils'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.6.1.0-1',
    checksum: '2d1aa2cf401454ed932d86c3cf47382b7b1b286236eb992466fa799928ccfc5b'
  }
)

configure_flags(
  prefix: '/usr',
  'with-include': "#{dep(:skalibs)}/usr/include",
  'with-lib': "#{dep(:skalibs)}/usr/lib/skalibs",
  'with-dynlib': "#{dep(:skalibs)}/usr/lib",
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps"
)

harden

build do
  configure
  make
  install
end

