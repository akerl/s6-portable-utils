name 's6-portable-utils'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.6.3.0-1',
    checksum: '5c5a8d96155758c0722bf38bffbcb28945d2b052d4aa02f38b7d648c1e390a6d'
  }
)

configure_flags(
  prefix: '/usr',
  'with-include': "#{dep(:skalibs)}/usr/include",
  'with-lib': "#{dep(:skalibs)}/usr/lib/skalibs",
  'with-dynlib': "#{dep(:skalibs)}/usr/lib",
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps"
)

harden

build do
  configure
  make
  install
end

